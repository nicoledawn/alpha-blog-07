<div class="container">


    <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors' %>
    <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-light rounded", data: {turbo: false}) do |f| %>
        <div class="row mb-3">
            <%= f.label :title, class: "col-sm-2 col-form-label form-title-styles" %>
            <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
        </div>

        <div class="row mb-3">
            <%= f.label :description, class: "col-sm-2 col-form-label  form-title-styles" %>
            <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "Description" %>
            </div>
        </div>

        <div class=" d-grid gap-2 d-md-flex justify-content-md-center">
            <%= f.submit class: "btn btn-outline-secondary" %>
        </div>
        </div>
    <% end %>

    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-dark text-center" %>
    </div>

</div>