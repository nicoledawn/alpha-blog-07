<h1 class="text-center mt-4">Listing All Articles</h1>
<div class="container">
    <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow  mb-5 bg-body rounded">
                    <small class="card-header text-muted fw-light text-lowercase fst-italic">by Nicole Holland</small>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "heading-styles" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                        <div class= "d-flex justify-content-center">
                            <%= link_to 'View', article_path(article), class: 'btn btn-outline-success m-1' %> 
                            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-secondary m-1' %>
                            <%= link_to 'Delete', article_path(article), class: "btn btn-outline-danger m-1", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
                        </div>
                    </div>
                    <div class="card-footer fw-light text-muted">
                        <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago.</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<table>
    <thead
        <tr>
            <th>Article ID</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%></td>
        </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to 'Create New Article', new_article_path  %></p>

